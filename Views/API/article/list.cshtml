@using SL.Util
@{
    RequestUtil req = new RequestUtil();
    int page = req.Int("page");
    int pageSize = req.Int("pageSize", 10);
    string keywords = req.String("keywords");

    string where = "1=1";
    List<object> parameters = new List<object>();

    if (!string.IsNullOrEmpty(keywords))
    {
        where += " and Title like '%'+@p0+'%'";
        parameters.Add(keywords);
    }

    int total;
    var data = SL.Data.SQL.QueryPage("ID",
        "ID,RelativeID,Title,SubTitle,Pic,Price,SpecialPrice,Sort",
        "Article",
        where,
        page,
        pageSize,
        parameters.ToArray(),
        out total,
        new Dictionary<string, bool> { { "Sort", false } });

    if (data != null)
    {
        for (int i = 0; i < data.Count; i++)
        {
            var item = data[i];
            item.Pic = RequestFile.FullUrl(item.Pic);
        }
    }

    Json.Write(new { success = true, data = data, total = total }, Output);
}
