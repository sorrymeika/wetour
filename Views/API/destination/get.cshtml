@using SL.Util
@{
    RequestUtil req = new RequestUtil();
    int id = req.Int("id", false, "id必传");

    if (req.HasError)
    {
        Json.Write(new { success = false, msg = req.FirstError, errors = req.GetErrors() }, Output);
    }
    else
    {
        var data = SL.Data.SQL.QuerySingle("select ID,Name,Content,MiddlePic,LargePic,Favorite,IsRecommend from Destination where ID=@p0", id);

        if (data != null)
        {
            data.MiddlePic = RequestFile.FullUrl(data.MiddlePic);
            data.LargePic = RequestFile.FullUrl(data.LargePic);
        }

        Json.Write(new { success = true, data = data }, Output);
    }
}
